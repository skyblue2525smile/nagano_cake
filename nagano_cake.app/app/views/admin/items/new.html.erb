<div class= mx-auto style="width: 450px;" "p-3 mb-2 bg-secondary text-white">
 商品新規登録
</div>

 <div class = mx-auto style="width: 400px;">
  <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

     <div class = mb-3>
     <h7>商品画像</h7>
     <%= f.file_field :image, accept: "image/*" %>
     </div>

     <div class = mb-3>
     <h7>商品名</h7>

       <%= f.text_field :name, autofocus: true, :placeholder => "商品名" %>
     </div>

      <div class = mb-3>
      <h7>商品説明</h7>

       <%= f.text_area :introduction, rows:3, autofocus: true, :placeholder => "ここに説明文を記述します" %>
      </div>

     <div class = mb-3>
     <h7>税込価格</h7>

     <%= f.text_field :price, autofocus: true, id:"inputIntroduction" %>円

     </div>
</div>
<div class = mx-auto style="width: 250px;">
     <%= f.submit "新規登録", class: "btn btn-success" %>
     </div>
</div>
   <% end %>
