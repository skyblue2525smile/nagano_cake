<div class = "container">
  <div class = "p-3 text-black">
      <span class = "bg-light pr-3 pl-3 h5">注文履歴詳細</span>
  </div>

<table>
  <thead>
    <tr>
      <th class="p-2"><b>購入者</b></th>
      <td class="p-2"><%= customer_id.name %></td>
    </tr>

    <tr>
      <th class="p-2"><b>注文日</b></th>
      <td class="p-2"><%= l customer_id.order_date %></td>
    </tr>

    <tr>
      <th class="p-2"><b>配送先</b></th>
      <td class="p-2"><%= post_code + address + mailling_label %>></td>
    </tr>

    <tr>
      <th class="p-2"><b>支払方法</b></th>
      <td class="p-2"><%= method_of_payment_i18n %></td>
    </tr>

    <tr>
      <th class="p-2"><b>注文ステータス</b></th>
      <td class="p-2">
        <%= @orders.order_status %>
        <%= link_to "更新", admin_order_path(@orders.id), class: "btn btn-success" %>
      </td>
    </tr>
  </thead>
</table>

<table class="table table-bordered m-2">
  <thead class="thead-light">
    <tr>
      <th class="p-2"><b>商品名</b></th>
      <th class="p-2"><b>単価(税込)</b></th>
      <th class="p-2"><b>数量</b></th>
      <th class="p-2"><b>小計</b></th>
      <th class="p-2"><b>製作ステータス</b></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td class="p-2"><%= order.item.name %></td>
      <td class="p-2"><%= order.item.with_tax_price %></td>
      <td class="p-2"><%= order.amount %></td>
      <td class="p-2"><%= (order.item.price * 1.1).floor * order.amount %></td>
      <td class="p-2">
      <%= @order.making_status %>
      <%= link_to "更新", admin_order_detail_path(@order.id), class: "btn btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th class="p-2"><b>商品合計</b></th>
      <th class="p-2"><%= @total_items_price.to_s(:delimited) %>円</th>
    </tr>

    <tr>
    <td class="p-2"><b>送料</b></td>
    <td class="p-2"><%= @order.postage.to_s(:delimited) %>円</td>
    </tr>

    <tr>
      <td class="p-2"><b>請求金額合計</b></td>
      <td class="p-2"><%= @order.total_amount.to_s(:delimited) %>円</td>
    </tr>
  </thead>
</table>