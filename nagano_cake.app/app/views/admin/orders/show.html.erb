<div class = "container">
  <div class = "p-3 text-black">
      <span class = "bg-light pr-3 pl-3 h5">注文履歴詳細</span>
  </div>

<table>
  <thead>
    <tr>
      <th class="p-2"><b>購入者</b></th>
      <td class="p-2"><%= link_to @orders.customer.name, admin_customer_orders_path(order.customer.id) %></td>
    </tr>

    <tr>
      <th class="p-2"><b>注文日</b></th>
      <td class="p-2"><%= l @orders.customer.order_date %></td>
    </tr>

    <tr>
      <th class="p-2"><b>配送先</b></th>
      <td class="p-2"><%= @orders.customer.post_code + @orders.customer.address + @orders.customer.mailling_label %>></td>
    </tr>

    <tr>
      <th class="p-2"><b>支払方法</b></th>
      <td class="p-2"><%= @orders.customer.method_of_payment_i18n %></td>
    </tr>

    <tr>
      <th class="p-2"><b>注文ステータス</b></th>
      <td class="p-2">
        <%= f.select :order_status, options_from_collection_for_select(Order.all, :order_status, :order_status) %>
        <%= link_to "更新", admin_customer_order_path(@orders.customer.id),  method: :patch, class: "btn btn-success" %>
      </td>
    </tr>
  </thead>
</table>

<table class="table table-bordered m-2">
  <thead class="thead-light">
    <tr>
      <th class="p-2"><b>商品名</b></th>
      <th class="p-2"><b>単価(税込)</b></th>
      <th class="p-2"><b>数量</b></th>
      <th class="p-2"><b>小計</b></th>
      <th class="p-2"><b>製作ステータス</b></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td class="p-2"><%= order_detail.item.name %></td>
      <td class="p-2"><%= order_detail.item.with_tax_price %></td>
      <td class="p-2"><%= order_detail.amount %></td>
      <td class="p-2"><%= (order_detail.item.price * 1.1).floor * order_detail.amount %></td>
      <td class="p-2">
      <%= form_with model: order_detail, url:admin_customer_order_detail_path, method: :patch do |f| %>
        <%= f.select :making_status, options_from_collection_for_select(OrderDetail.all, :making_status, :making_status) %>
        <%= f.submit "更新", admin_customer_order_detail_path(@order_detail.customer.id), method: :patch, class: "btn btn-success" %>
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th class="p-2"><b>商品合計</b></th>
      <th class="p-2"><%= @order_details.total_items_price.to_s(:delimited) %>円</th>
    </tr>

    <tr>
    <td class="p-2"><b>送料</b></td>
    <td class="p-2"><%= @order_details.postage.to_s(:delimited) %>円</td>
    </tr>

    <tr>
      <td class="p-2"><b>請求金額合計</b></td>
      <td class="p-2"><b><%#= @order.total_amount.to_s(:delimited) %>円</b></td>
    </tr>
  </thead>
</table>