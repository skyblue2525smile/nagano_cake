<div class = "p-3 text-black" style = "width: 450px;">
  <div class = "bg-secondary w-25 mt-5 ml-5"><h5><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h5></div>
</div>

<div class = "col-md-8">
  <table>
    <tbody>
      <tbody>

        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

      </tbody>
    </tbody>
  </table>
</div>

<div style="display: inline-block">
  <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
  <%= link_to "注文履歴一覧を見る", admin_orders_show_path, class: "btn btn-primary" %>
</div>



