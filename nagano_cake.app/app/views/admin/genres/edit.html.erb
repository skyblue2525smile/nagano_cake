<div class="container">
  <div class = "p-3 text-black">
        <span class = "bg-light pr-3 pl-3 h5">ジャンル編集</span>
  </div>

  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
  <table>
    <td><b><%= f.label :ジャンル名, class: "mr-3" %></b></td>
    <td><%= f.text_field :name, class: "mr-5" %></td>
    <td><%= f.submit "変更を保存", class: "btn btn-success pr-3 pl-3" %></td>
  </table>
  <% end %>
</div>