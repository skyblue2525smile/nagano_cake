 <h2 class="mt-3">New book</h2>

    <%= form_with model: book, url: books_path, method: :post do |f| %>
    <div class="form-group">
      <label for="title">Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <label for="opinion">Opinion</label>
      <%= f.text_area :body %>
    </div>

    <div class="form-group">
      <%= f.submit "Create Book", class:"btn btn-success" %>

    </div>
   <% end %>