<h5>ショッピングカート</h5><%= link_to "カートを空にする", admin_cart_item_path(@cart_item.id), method: :delete %>
<table class="table table-bordered">
  <tbody>
    <thead class="thead-light">
      <tr>
        <th class="p-2">商品名</th>
        <th class="p-2">単価(税込)</th>
        <th class="p-2">数量</th>
        <th class="p-2">小計</th>
        <th class="p-2"></th>
        <th colspan="6"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>

        <tr>
          <td class="p-3"><%= cart_item.name %></td>
          <td class="p-3"><%= cart_item.item.with_tax_price %></td>
          <td class="p-3"><%= cart_item.amount %><%= link_to "変更", item_path(@item.id) %></td>
          <td class="p-3"><%= cart_item.subtotal %></td>
          <td class="p-3"><%= link_to "削除する", admin_item_path(@item.id), method: :delete %></td>
          <%= link_to "買い物を続ける", admin_items_path %>
          <% @合計金額　+= cart_item.subtotal %>
        </tr>
      <% end %>
    </tbody>
    <%= link_to "情報入力に進む", new_order_path %>
</table>