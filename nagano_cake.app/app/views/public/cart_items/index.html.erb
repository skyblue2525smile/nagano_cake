<h5>ショッピングカート</h5><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>
<table class="table table-bordered">
  <tbody>
    <thead class="thead-light">
      <tr>
        <th class="p-2">商品名</th>
        <th class="p-2">単価(税込)</th>
        <th class="p-2">数量</th>
        <th class="p-2">小計</th>
        <th class="p-2"></th>
        <th colspan="6"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>

        <tr>
          <td class="p-3"><%= cart_item.item.name %></td>
          <td class="p-3"><%= cart_item.item.with_tax_price %></td>
          <%= form_with model: cart_item, url: cart_items_path, method: :post do |f| %>
           <%= f.hidden_field :item_id, :value => cart_item.item.id %>
          <p><%= f.select :amount, [['1',1], ['2',2], ['3',3]] %></p>
          <p><%= f.submit "変更", class: "btn btn-success" %></p>
          <% end %>

          <td class="p-3"><%= cart_item.subtotal %></td>
          <td class="p-3"><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>

          <% @sum +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
        </tr>
      <% end %>
      <%= link_to "買い物を続ける", items_path %>
      <%= @sum %>
    </tbody>
    <%= link_to "情報入力に進む", new_order_path %>
</table>