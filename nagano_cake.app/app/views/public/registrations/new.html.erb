<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<p>名前</p>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.last_name_field, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.first_name_field, autocomplete: "first_name" %>
  </div>

<p>フリガナ</p>
  <div class="field">
    <%= f.label :last_name_kana %>
    <%= last_name_kana_field, autocomplete: "last_name_kana_field" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana_field %>
    <%= first_name_kana_field, autocomplete:"first_name_kana_field" %>
  </div>

<p>メールアドレス</p>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<p>郵便番号(ハイフンなし)</p>
  <div class="field">
    <%= f.label :postal_code %>
    <%= f.postal_code, autocomplete: "postal_code" %>
  </div>

<p>住所</p>
  <div class="field">
    <%= f.label :adress %>
    <%= f.adress, autocomplete: "adress" %>
  </div>

<p>電話番号(ハイフンなし)</p>
  <div class="field">
    <%= f.label :telephone_number%>
    <%= f.telephone_number, autocomplete: "telephone_number" %>
  </div>

<p>パスワード(6文字以上)</p>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

<p>パスワード(確認用)</p>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-success" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= link_to "こちら", public/shared %>
<p>からログインしてください</p>

