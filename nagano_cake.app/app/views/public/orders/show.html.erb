<div class = "container">
  <div class = "p-3 text-black">
      <span class = "bg-light pr-3 pl-3 h5">注文履歴詳細</span>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h6><b>注文情報</b></h6>
      <table class="table table-bordered">
        <tbody>
          <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <td>
              <%= @order.created_at %>
            </td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= @order.post_code %>
              <%= @order.address %>
              <%= @order.mailling_label %>
            </td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td>
              <%= @order.method_of_payment %>
            </td>
          </tr>
          </thead>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <h6><b>請求情報</b></h6>
      <table class="table table-bordered">
        <tbody>
          <thead class="thead-light">
            <tr>
              <th>商品合計</th>
              <td><%= @order.total_amount.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th>配送料</th>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <th><b>ご請求金額</b></th>
              <td><%= (@order.total_amount + @order.postage).to_s(:delimited) %></td>
            </tr>
          </thead>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h6><b>注文内容</b></h6>
      <table class="table table-bordered">
        <tbody>
          <thead class="thead-light">
            <% @order_details.items.each do |order_details.item| %>
            <tr>
              <th>商品</th>
              <td><%= order_details.item.item %></td>
            </tr>
            <tr>
              <th>単価（税込み）</th>
              <td><%= order_details.item.purchase_price %></td>
            </tr>
            <tr>
              <th>個数</th>
              <td><%= order_details.item.items_amount %></td>
            </tr>
            <tr>
              <th>小計</th>
              <td><%= order_details.item.subtotal %></td>
            </tr>
          </thead>
        </tbody>
      </table>
    </div>
  </div>
</div>