<div class = "container">
  <div class = "row m-3">
    <div class = "col-md-4"></div>
    <div class = "col-md-4">
        <%= image_tag @item.get_profile_image(300, 300) %>
    </div>
    <div class = "col-md-4">
        <p><%= @item.name %></p>
        <p><%= @item.introduction %></p>
        <p><%= "￥" + (@item.price*1.10).round.to_s + "（税込）" %></p>
        <p><%= f.select :amount, [['1',1], ['2,'2], ['3',3]] %></p>
        <p><%= link_to "カートに入れる", cart_items_index_path, class: "btn btn-success" %></p>

    </div>
  </div>
</div>