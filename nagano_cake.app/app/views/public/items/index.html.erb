<div class = "container">
  <div class = "row">
    <div class = "col-md-10">
      <h4 class = "p-2">商品一覧(全件)</h4>
      <% @items.each do |item| %>
      <%= image_tag item.get_profile_image(300, 300) %>
      <p><%= link_to item.name, item_path(item.id) %></p>
      <p><%= "￥" + item.price.to_s %></p>

      <% end %>
      </div>
  </div>
</div>

<%= paginate @items %>