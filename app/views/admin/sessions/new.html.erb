<div class="container">
<div class = "p-3 text-black">
  <span class = "bg-light pr-3 pl-3 h5">管理者ログイン</span>
</div>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
<!--()を付けている理由：追記した他のコードの影響を受けて、エラーが発生するリスクを回避するため-->

  <div class="field d-flex justify-content-center">
    <span class="p-1">
      <%= f.label :メールアドレス %>
      </span>
    <span class="p-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
    </span>
  </div>


  <div class="field d-flex justify-content-center">
    <span class="pr-0 pl-0"><%= f.label :パスワード %></span>
    <span class="pl-5"><%= f.password_field :password, autocomplete: "current-password", size: 40 %></span>
  </div>

  <!--< if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <= f.check_box :remember_me %>-->
  <!--    <= f.label :remember_me %>-->
  <!--  </div>-->
  <!--< end %>-->

  <div class="d-flex justify-content-center m-3">
    <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

</div>
